@using Library.Models.Account
@model ProfileModel

@{
    ViewBag.Title = "Редактирование профиля";
}

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm())
            {
                <form class="form-horizontal">
                    <fieldset>
                        <legend>@ViewBag.Title</legend>

                        <div class="row">
                            <label for="Fio" class="control-label col-lg-3">ФИО</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.Fio, new { @class = "form-control", value = Model.Reader.Fio })
                            </div>
                        </div>
                      
                        <div class="row">
                            <label for="Birthday" class="control-label col-lg-3">День рождения</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.Birthday, new {@class = "form-control", value = Model.Reader.Birthday})
                            </div>
                        </div>

                        <div class="row">
                            <label for="Birthday" class="control-label col-lg-3">Серия паспорта</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.PassportSeries, new { @class = "form-control", value = Model.Reader.PassportSeries })
                            </div>
                        </div>
                        <div class="row">
                            <label for="Birthday" class="control-label col-lg-3">Код паспорта</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.PassportCode, new { @class = "form-control", value = Model.Reader.PassportCode })
                            </div>
                        </div>

                        <div class="row">
                            <label for="Birthday" class="control-label col-lg-3">Код свидетельства о рождении</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.CertificateCode, new { @class = "form-control", value = Model.Reader.CertificateCode })
                            </div>
                        </div>

                        <div class="row">
                            <label for="Birthday" class="control-label col-lg-3">Email</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.Email, new { @class = "form-control", value = Model.Reader.Email })
                            </div>
                        </div>                                           

                        <div class="row">
                            <label for="Login" class="control-label col-lg-3">Логин</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.Login, new {@class = "form-control", value = Model.Reader.Login})
                            </div>
                        </div>

                        <div class="row">
                            <label for="Password" class="control-label col-lg-3">Пароль</label>
                            <div class="form-group col-lg-9">
                                @Html.TextBoxFor(x => x.Reader.Password, new {@class = "form-control", placeholder = "Новый пароль", type = "password"})
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-lg-offset-2 col-lg-8">
                                <button type="submit" class="btn btn-primary btn-block">Сохранить изменения</button>
                            </div>
                        </div>

                    </fieldset>
                </form>
            }
        </div>      
    </div> 
