<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.united.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img id="logo" src="~/Content/book2.png" width="60" height="60" alt="Библиотека" />
            </div>

                    <div id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            @if (Session["coach"] == null)
                            {
                                <li>@Html.ActionLink("Библиотека №23", "Index", "Home")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Библиотека №23", "LibraryCard", "Card")</li>
                                <li>@Html.ActionLink("Сообщения", "Messages", "Messages")</li>
                            }

                        </ul>
                    </div>


                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                        <ul class="nav navbar-nav navbar-right">

                            @if (Session["login"] != null)
                            {
                                if (Session["admin"] != null)
                                {
                                    <li class="dropdown">
                                        <a  class="dropdown-toggle" data-toggle="dropdown" href="#"@*role="button"*@ @*aria-expanded="false"*@>
                                            Работа с пользователями
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu" @*role="menu"*@>
                                            <li>@Html.ActionLink("Добавить пользователя", "UserProfile", "Account")</li>
                                            <li>@Html.ActionLink("Редактировать пользователя", "UserProfile", "Account")</li>
                                        </ul>
                                    </li>

                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                            Работа книгами
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>@Html.ActionLink("Добавить книгу", "UserProfile", "Account")</li>
                                            <li>@Html.ActionLink("Аналитика", "UserProfile", "Account")</li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Карточка читателя", "UserLibraryCard", "UserCard", routeValues: null, htmlAttributes: new { id = "cardLink" })</li>
                                }

                                <li>@Html.ActionLink("Профиль", "UserProfile", "Account", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
                                <li>@Html.ActionLink("Выйти", "Logout", "Account", routeValues: null, htmlAttributes: new { id = "logoutLink" })</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                            }
                        </ul>

                    </div>
</div>

</nav>
    <div class="container main">     
        @Html.Partial("_LayoutMessage")  
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
</body>
</html>


