<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.united.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img id="logo" src="~/Content/book2.png" width="60" height="60" alt="Библиотека" />
            </div>

            <div id="bs-example-navbar-collapse-1">            
                <ul class="nav navbar-nav">
                @if (Session["coach"] == null)
                {
                    <li>@Html.ActionLink("Библиотека №23", "Index", "Home")</li>
                }
     
                </ul>        
            </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-left">

                            <li>@Html.ActionLink("Сообщения", "Messages", "Messages")</li>      
                            
                        </ul>
                           
                         <ul class="nav navbar-nav navbar-right">

                                @if (Session["login"] != null)
                                {
                                    <li>@Html.ActionLink("Карточка читателя", "UserLibraryCard", "UserCard", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
                                    <li>@Html.ActionLink("Профиль", "UserProfile", "Account", routeValues: null, htmlAttributes: new { id = "profileLink" })</li>
                                    <li>@Html.ActionLink("Выйти", "Logout", "Account", routeValues: null, htmlAttributes: new { id = "logoutLink" })</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                    <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                                }
                            </ul>
</div>
            </div>
</nav>
    <div class="container main">     
        @Html.Partial("_LayoutMessage")  
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
</body>
</html>


